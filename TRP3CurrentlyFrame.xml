<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Frame name="TRP3CurrentlyTemplate" frameStrata="MEDIUM" toplevel="true" parent="UIParent" enableMouse="true" movable="true" virtual="true" >
		<Size x="200" y="70" />
    
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="380"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="2" right="2" top="1" bottom="3"/>
			</BackgroundInsets>
		</Backdrop>
    
		<Scripts>
			<OnLoad> 
				self:SetClampedToScreen(true);
			</OnLoad>
		</Scripts>
    <Frames>
			<Frame parentKey="caption" enableMouse="true" >
				<Backdrop bgFile="Interface\BankFrame\Bank-Background"
						  edgeFile="Interface\GLUES\COMMON\TextPanel-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="100"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="4" right="2" top="2" bottom="2"/>
					</BackgroundInsets>
				</Backdrop>
				<Size x="150" y="20"/>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parentCaption" text="Currently" inherits="GameFontNormal"
									wordwrap="false">
							<Anchors>
								<Anchor point="LEFT" x="10" y="2"/>
								<Anchor point="RIGHT" x="-10" y="2"/>
							</Anchors>
							<Color r="0.95" g="0.95" b="0.95"/>
						</FontString>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="TOPLEFT" x="16" y="10"/>
				</Anchors>
			</Frame>
      
      <EditBox name="$parentText" parentKey="text" multiLine="true" enableMouse="false" autoFocus="false">
				<Anchors>
					<Anchor point="TOP" x="0" y="-14"/>
					<Anchor point="LEFT" x="15" y="0"/>
				</Anchors>
        <Scripts>
          <OnLoad>
           
          </OnLoad>
          <OnShow>
            
            self:SetWidth(self:GetParent():GetWidth() - 30 );
          </OnShow>
          <OnTextChanged>
            local name,fontHeight = self:GetFont()
            self:GetParent():SetHeight( self:GetHeight() + fontHeight + 14 ) 
          </OnTextChanged>  
          <OnEscapePressed function="EditBox_ClearFocus"/>
          <OnEditFocusLost>
            self:GetParent().host:SaveCurrently()
          </OnEditFocusLost>
        </Scripts>
        <FontString inherits="ChatFontSmall"/>
      </EditBox>
       
    </Frames>
	</Frame>
  
	
	<Script file="TRP3CurrentlyFrame.lua"/>

</Ui>